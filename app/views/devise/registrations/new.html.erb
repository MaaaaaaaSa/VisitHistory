<%= render 'shared/second-header'%>

<%= form_with url: user_registration_path, class: 'registration-main', local: true do |f| %>

<div class='form-wrap'>
  <div class='form-header'>
    <div class='form-header-text'>
      会員情報入力
    </div>
  </div>


  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">名前（全角）</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.text_field :name, class:"input-default", id:"name", placeholder:"例) 田中　太郎", autofocus: true, maxlength:"10" %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">名前（カナ）</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.text_field :name_kana, class:"input-default", id:"name_kana", placeholder:"例) タナカ　タロウ", maxlength:"20" %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">メールアドレス</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.email_field :email, class:"input-default", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">パスワード</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.password_field :password, class:"input-default", id:"password", placeholder:"6文字以上の半角英数字" %>
    <p class='info-text'>※英字と数字の両方を含めて設定してください</p>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">パスワード(確認)</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.password_field :password_confirmation, class:"input-default", id:"password-confirmation", placeholder:"同じパスワードを入力して下さい" %>
  </div>
  <div class="form-group">
    <div class="form">
      <div class="weight-bold-text">
        所属
        <span class="indispensable">必須</span>
      </div>

    </div>
</div>
<div class='register-btn'>
    <%= f.submit "会員登録" ,class:"register-red-btn" %>
</div>

<% end %>

<%= render "devise/shared/links" %>
